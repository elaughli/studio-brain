extends ../layout

block content
  -var info = info || false
  if info
    h1.red-text=info
    br
    hr
    br
  form(method='POST', action='/auth/login')
    h2 What is the password!?
    input(type='username', name='username', placeholder='username')
    input(type='password', name='password', placeholder='Password')
    button.btn.btn-primary(type='submit') Submit you answer...
